package gui;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.image.ImageObserver;

import javax.swing.text.html.HTMLDocument.HTMLReader.IsindexAction;

import structures.Vec2;

public class MenuButton extends GuiElement{
	
	private static final String ID = "menu_button";
	private static final String IMAGE_NAME = "menu";
	private static final Vec2 SIZE = new Vec2(32*3, 32);
	
	private boolean menuOpened = false;

	public MenuButton(String id, Vec2 position, Vec2 size, String imageName) {
		super(ID, position, size, IMAGE_NAME);
	}

	@Override
	public void update() {
		if(menuOpened == false) {
			menuOpened = true;
		} else {
			menuOpened = false;
		}
		
	}

	@Override
	public void render(Graphics g, ImageObserver observer) {
		
		if ()
		g.setColor(new Color(0, 150, 50));
		g.fillRect(0, (int) GuiManager.TOP_GUI_SIZE.getY(), 64, 64);
		
	}

}
