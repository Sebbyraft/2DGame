package gui;

import java.awt.Graphics;
import java.awt.event.MouseAdapter;
import java.awt.event.MouseEvent;
import java.awt.image.ImageObserver;
import java.util.List;

import display.GameWindow;
import structures.Vec2;


public class GuiManager {
	
	public static void render(List<GuiElement> guiElements, Graphics g, ImageObserver observer) {
		for(GuiElement guiElement:guiElements) {
			guiElement.render(g, observer);
		}
	}
	
	public static boolean update(List<GuiElement> guiElements) {
		boolean isSelected = false;
		for(GuiElement guiElement:guiElements) {
		
			if(guiElement.isSelected(x, y)) {
				//guiElement.startAnimation();
			} else {
				//guiElement.stopAnimation();
			}
		}
		return isSelected;
	}
	
	
	public Vec2 mousePressed(MouseEvent e) {
		
		float x = (float) (e.getX() - GameWindow.getFramePosition().getX());
		float y = (float) (e.getY() - GameWindow.getFramePosition().getY());
		
		return new Vec2(x, y);
	}

}
