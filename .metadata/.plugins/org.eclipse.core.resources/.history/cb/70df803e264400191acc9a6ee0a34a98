import loader.Loader;
import toolkit.Vec2;

public class ToolBar extends GuiElement{
	
	private List<ToolSpace> toolSpaces;
	private BufferedImage image;
	
	public ToolBar(String id, Vec2 position, Vec2 size, String imageName) {
		super(id, position, size, imageName);
		this.image = Loader.loadImage("res/test.png");
		toolSpaces = new ArrayList<ToolSpace>();
		fillBar();
	}

	@Override
	public void update() {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void render(Graphics2D g, ImageObserver observer) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void changeColor(Color color) {
		// TODO Auto-generated method stub
		
	}
	
	private void fillBar() {
		toolSpaces.add(new ToolSpace("tool_space_1", position, this.image));
	}
	
	public void setImageOfSpace()

}
